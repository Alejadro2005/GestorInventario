# gui/productosmenuscreen.kv
#:import dp kivy.metrics.dp

<ProductosMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: '[b]GESTIÓN DE PRODUCTOS[/b]'
            markup: True
            font_size: 24
            color: 0.1, 0.4, 0.8, 1
            size_hint_y: None
            height: 40

        GridLayout:
            cols: 2
            spacing: 10
            row_default_height: '50dp'

            Button:
                text: 'Agregar Producto'
                background_color: 0.1, 0.8, 0.4, 1
                on_press: root.mostrar_submenu('1')

            Button:
                text: 'Eliminar Producto'
                background_color: 0.8, 0.1, 0.1, 1
                on_press: root.mostrar_submenu('2')

            Button:
                text: 'Actualizar Stock'
                background_color: 0.1, 0.4, 0.8, 1
                on_press: root.mostrar_submenu('3')

            Button:
                text: 'Ver Inventario'
                background_color: 0.9, 0.7, 0.3, 1
                on_press: root.mostrar_submenu('4')

        Button:
            text: 'Volver al Menú Principal'
            background_color: 0.6, 0.6, 0.6, 1
            size_hint_y: None
            height: 50
            on_press: root.mostrar_submenu('5')