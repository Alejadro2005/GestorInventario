#:import dp kivy.metrics.dp

<AgregarProductoScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            GridLayout:
                cols: 2
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '40dp'

                Label:
                    text: '[b]Nombre:[/b]'
                    markup: True
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: nombre_producto
                    hint_text: "Ej: Laptop HP"
                    background_color: 1, 1, 1, 1

                Label:
                    text: '[b]Precio ($):[/b]'
                    markup: True
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: precio_producto
                    hint_text: "Ej: 599.99"
                    input_filter: 'float'
                    background_color: 1, 1, 1, 1

                Label:
                    text: '[b]Cantidad:[/b]'
                    markup: True
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: cantidad_producto
                    hint_text: "Ej: 50"
                    input_filter: 'int'
                    background_color: 1, 1, 1, 1

                Label:
                    text: '[b]Categoría:[/b]'
                    markup: True
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: categoria_producto
                    hint_text: "electronica/escolar"
                    background_color: 1, 1, 1, 1

                Label:
                    text: '[b]Stock Mínimo:[/b]'
                    markup: True
                    color: 0.2, 0.2, 0.2, 1
                TextInput:
                    id: stock_minimo
                    hint_text: "Ej: 10"
                    input_filter: 'int'
                    background_color: 1, 1, 1, 1

        BoxLayout:
            size_hint_y: None
            height: '50dp'
            spacing: 10

            Button:
                text: 'GUARDAR'
                background_color: 0.1, 0.8, 0.4, 1
                on_press: root.agregar_producto()

            Button:
                text: 'CANCELAR'
                background_color: 0.8, 0.1, 0.1, 1
                on_press: root.manager.current = 'productos_menu'